<Window x:Class="Ekz_Sedov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekz_Sedov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF3C3C3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image  HorizontalAlignment="Left" Source="Resources/picture.png"/>
            <Label Content="ДекоЦентр" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Segoe Script" FontWeight="Bold" FontSize="35" Foreground="#FFFF7400"/>
        </StackPanel>
        <Frame Name="frmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <Label Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFFF7400" Content="Россия, Ярославская область, Ярославль, ул. Колисовой" FontSize="16"/>
    </Grid>
</Window>
