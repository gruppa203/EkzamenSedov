<Page x:Class="Ekz_Sedov.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ekz_Sedov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
            <Button Name="btnTovar" Grid.Row="0" Height="50" Width="200" Content="Товары" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe Script" FontWeight="Bold" Background="#FFFF7400" Click="btnTovar_Click"/>
        <Button Name="btnBack" Content="Назад" Grid.Row="1" Height="40" Width="150" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Segoe Script" FontWeight="Bold" Background="#FFFF7400" FontSize="24" Click="btnBack_Click"/>
    </Grid>
</Page>
