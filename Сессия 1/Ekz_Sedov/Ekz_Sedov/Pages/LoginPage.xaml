<Page x:Class="Ekz_Sedov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ekz_Sedov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Height="227"  VerticalAlignment="Top" Width="327">

            <Label Content="Введите логин" HorizontalAlignment="Stretch" FontFamily="Segoe Script" FontWeight="Bold" FontSize="20" Foreground="#FFFF7400"/>
            <TextBox x:Name="txbLogin" Height="30" TextWrapping="Wrap" />
            <Label Content="Введите пароль" FontFamily="Segoe Script" FontWeight="Bold" FontSize="20" Foreground="#FFFF7400"/>
            <PasswordBox x:Name="psbPassword" Height="30"/>
            <Button x:Name="btnToComeIn" Content="Войти" Height="50" Margin="5"  VerticalAlignment="Center" Width="100" HorizontalAlignment="Center" Click="btnToComeIn_Click" FontFamily="Segoe Script" FontWeight="Bold" Background="#FFFF7400" FontSize="20"/>
            </StackPanel>

    </Grid>
</Page>
